		<config-description>
			<parameter name="uid" type="text">
				<label>Bricklet uid</label>
				<description>The uid identifies the bricklet.</description>
				<required>true</required>
			</parameter>

			<parameter name="contrast" type="integer" min="0" max="63" multiple="false" required="false">
				<label>contrast</label>
				
				<default>14</default>
				
				<description>Contrast between 0 - 63..</description>
			</parameter>

			<parameter name="backlight" type="integer" min="0" max="100" multiple="false" required="false">
				<label>backlight</label>
				
				<default>100</default>
				
				<description>Backlight intensity between 0 - 100..</description>
			</parameter>

			<parameter name="invert" type="boolean"   multiple="false" required="false">
				<label>invert</label>
				
				<default>false</default>
				
				<description>Invert color scheme..</description>
			</parameter>

			<parameter name="automaticDraw" type="boolean"   multiple="false" required="false">
				<label>automaticDraw</label>
				
				<default>true</default>
				
				<description>Buffer UI changes..</description>
			</parameter>

			<parameter name="tabgesture" type="integer" min="1" max="3" multiple="false" required="false">
				<label>tabgesture</label>
				
				<default>3</default>
				
				<description>0 = on click, 1 = on swipe, 3 = on click and on swipe.</description>
			</parameter>

			<parameter name="tabclears" type="boolean"   multiple="false" required="false">
				<label>tabclears</label>
				
				<default>true</default>
				
				<description>Automatically remove GUI elements on tab change..</description>
			</parameter>

			<parameter name="statusLEDConfig" type="integer" min="0" max="3" multiple="false" required="false">
				<label>statusLEDConfig</label>
				
				<default>3</default>
				
				<description>Status LED<![CDATA[<br>]]>Between 0=>OFF), 1=>ON, 2=>HEARTBEAT, 3=>STATUS; default is 3=>STATUS..</description>
			</parameter>

			<parameter name="touchLEDConfig" type="integer" min="0" max="3" multiple="false" required="false">
				<label>touchLEDConfig</label>
				
				<default>3</default>
				
				<description>Status LED<![CDATA[<br>]]>Between 0=>OFF), 1=>ON, 2=>HEARTBEAT, 3=>Show Touch; default is 3=>Show Touch..</description>
			</parameter>

		</config-description>

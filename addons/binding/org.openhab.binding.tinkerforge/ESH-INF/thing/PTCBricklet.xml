<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="tinkerforge" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

	<thing-type id="ptc">
		<supported-bridge-type-refs>
			<bridge-type-ref id="brickd" />
		</supported-bridge-type-refs>

		<label>BrickletPTC</label>
		<description>Tinkerforge BrickletPTC</description>

		<channels>
		
		<channel id="temperature" typeId="temperature"/>
		
		</channels>

		<config-description>
			<parameter name="uid" type="text">
				<label>Bricklet uid</label>
				<description>The uid identifies the bricklet.</description>
				<required>true</required>
			</parameter>

			<parameter name="wireMode" type="integer" min="2" max="4" multiple="false" required="false">
				<label>wireMode</label>
				
				<default>2</default>
				
				<description>wire mode of the ptc sensor<![CDATA[<br>]]>Possible values are 2, 3 and 4 which correspond to 2-, 3- and 4-wire sensors (default 2)..</description>
			</parameter>

			<parameter name="noiseRejectionFilter" type="integer" min="0" max="1" multiple="false" required="false">
				<label>noiseRejectionFilter</label>
				
				<default>0</default>
				
				<description>Sets the noise rejection filter to either 50Hz (0) or 60Hz (1)..</description>
			</parameter>

		</config-description>
	</thing-type>

</thing:thing-descriptions>
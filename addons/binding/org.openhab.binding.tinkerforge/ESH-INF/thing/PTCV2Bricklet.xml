<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="tinkerforge" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

	<thing-type id="ptcV2">
		<supported-bridge-type-refs>
			<bridge-type-ref id="brickd" />
		</supported-bridge-type-refs>

		<label>BrickletPTCV2</label>
		<description>Tinkerforge BrickletPTCV2</description>

		<channels>
		
			<channel id="temperature" typeId="temperature"/>
		
			<channel id="resistance" typeId="resistance"/>
		
		</channels>

		<config-description>
			<parameter name="uid" type="text">
				<label>Bricklet uid</label>
				<description>The uid identifies the bricklet.</description>
				<required>true</required>
			</parameter>

			<parameter name="callbackPeriod" type="integer">
				<label>Callback period</label>
				<description>Callback period in ms</description>
				<required>false</required>
				<default>1000</default>
			</parameter>
			<parameter name="threshold" type="decimal">
				<label>Threshold</label>
				<description>Threshold</description>
				<required>false</required>
				<default>0</default>
			</parameter>


			<parameter name="wireMode" type="integer" min="2" max="4" multiple="false" required="false">
				<label>wireMode</label>
				
				<default>2</default>
				
				<description>wire mode of the ptsc sensor<![CDATA[<br>]]>Possible values are 2, 3 and 4 which correspond to 2-, 3- and 4-wire sensors (default 2)..</description>
			</parameter>

			<parameter name="noiseRejectionFilter" type="integer" min="0" max="1" multiple="false" required="false">
				<label>noiseRejectionFilter</label>
				
				<default>0</default>
				
				<description>Sets the noise rejection filter to either 50Hz (0) or 60Hz (1)..</description>
			</parameter>

			<parameter name="movingAverageTemperature" type="integer" min="1" max="1000" multiple="false" required="false">
				<label>movingAverageTemperature</label>
				
				<default>40</default>
				
				<description>Length of a moving averaging from 20ms (1) to 20s (1000).</description>
			</parameter>

			<parameter name="movingAverageResistance" type="integer" min="1" max="1000" multiple="false" required="false">
				<label>movingAverageResistance</label>
				
				<default>1</default>
				
				<description>Length of a moving averaging from 20ms (1) to 20s (1000).</description>
			</parameter>

		</config-description>
	</thing-type>

</thing:thing-descriptions>
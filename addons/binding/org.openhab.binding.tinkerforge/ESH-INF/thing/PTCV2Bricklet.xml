<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="tinkerforge" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

	<thing-type id="ptcV2">
		<supported-bridge-type-refs>
			<bridge-type-ref id="brickd" />
		</supported-bridge-type-refs>

		<label>BrickletPTCV2</label>
		<description>Tinkerforge BrickletPTCV2</description>

		<channels>
		
			<channel id="temperature" typeId="temperature"/>
		
			<channel id="resistance" typeId="resistance"/>
		
		</channels>

		<config-description>
			<parameter name="uid" type="text">
				<label>Bricklet uid</label>
				<description>The uid identifies one certain bricklet.</description>
				<required>true</required>
			</parameter>

			<parameter name="wireMode" type="integer" multiple="false" required="false">
				<label>wireMode</label>
				<description>wireMode.</description>
			</parameter>

			<parameter name="noiseRejectionFilter" type="integer" multiple="false" required="false">
				<label>noiseRejectionFilter</label>
				<description>noiseRejectionFilter.</description>
			</parameter>

			<parameter name="movingAverageTemperature" type="integer" multiple="false" required="false">
				<label>movingAverageTemperature</label>
				<description>movingAverageTemperature.</description>
			</parameter>

			<parameter name="movingAverageResistance" type="integer" multiple="false" required="false">
				<label>movingAverageResistance</label>
				<description>movingAverageResistance.</description>
			</parameter>

		</config-description>
	</thing-type>

</thing:thing-descriptions>
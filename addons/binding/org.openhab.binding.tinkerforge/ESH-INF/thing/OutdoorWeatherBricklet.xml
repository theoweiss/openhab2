<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="tinkerforge" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

	<thing-type id="outdoorweather">
		<supported-bridge-type-refs>
			<bridge-type-ref id="brickd" />
		</supported-bridge-type-refs>

		<label>BrickletOutdoorWeather</label>
		<description>Tinkerforge BrickletOutdoorWeather</description>

		<channels>
		
			<channel id="temperatureStation" typeId="temperatureStation"/>
		
			<channel id="humidityStation" typeId="humidityStation"/>
		
			<channel id="windSpeedStation" typeId="windSpeedStation"/>
		
			<channel id="gustSpeedStation" typeId="gustSpeedStation"/>
		
			<channel id="rainStation" typeId="rainStation"/>
		
			<channel id="windDirectionStation" typeId="windDirectionStation"/>
		
			<channel id="lastChangeStation" typeId="lastChangeStation"/>
		
			<channel id="batteryLowStation" typeId="batteryLowStation"/>
		
			<channel id="temperatureSensor" typeId="temperatureSensor"/>
		
			<channel id="humiditySensor" typeId="humiditySensor"/>
		
			<channel id="lastChangeSensor" typeId="lastChangeSensor"/>
		
		</channels>

		<config-description>
			<parameter name="uid" type="text">
				<label>Bricklet uid</label>
				<description>The uid identifies one certain bricklet.</description>
				<required>true</required>
			</parameter>

			<parameter name="stationDevices" type="text" multiple="true" required="false">
				<label>stationDevices</label>
				<description>stationDevices.</description>
			</parameter>

			<parameter name="sensorDevices" type="text" multiple="true" required="false">
				<label>sensorDevices</label>
				<description>sensorDevices.</description>
			</parameter>

		</config-description>
	</thing-type>



	<channel-type id="temperatureStation">
		
		<item-type>Number:Temperature</item-type>
		
		<label>TemperatureStation</label>
		<description>Current Temperature</description>
		<category>Temperature</category>
		<state readOnly="true" pattern="%.1f %unit%"/>
	</channel-type>




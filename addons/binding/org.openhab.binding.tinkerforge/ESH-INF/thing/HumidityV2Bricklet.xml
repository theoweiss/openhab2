<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="tinkerforge" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

	<thing-type id="humidityV2">
		<supported-bridge-type-refs>
			<bridge-type-ref id="brickd" />
		</supported-bridge-type-refs>

		<label>BrickletHumidityV2</label>
		<description>Tinkerforge BrickletHumidityV2</description>

		<channels>
		
			<channel id="humidity" typeId="humidity"/>
		
			<channel id="temperature" typeId="temperature"/>
		
			<channel id="heater" typeId="heater"/>
		
		</channels>

		<config-description>
			<parameter name="uid" type="text">
				<label>Bricklet uid</label>
				<description>The uid identifies the bricklet.</description>
				<required>true</required>
			</parameter>

			<parameter name="callbackPeriod" type="integer">
				<label>Callback period</label>
				<description>Callback period in ms</description>
				<required>false</required>
				<default>1000</default>
			</parameter>
			<parameter name="threshold" type="decimal">
				<label>Threshold</label>
				<description>Threshold</description>
				<required>false</required>
				<default>0</default>
			</parameter>


			<parameter name="movingAverageLengthHumidity" type="integer" min="0" max="1000" multiple="false" required="false">
				<label>movingAverageLengthHumidity</label>
				
				<default>5</default>
				
				<description>length of a moving averaging<![CDATA[<br>]]>1=>50ms, 1000=>50s; default 5<![CDATA[<br>]]>For long term measurements the longest moving average will give the cleanest results..</description>
			</parameter>

			<parameter name="movingAverageLengthTemperature" type="integer" min="0" max="1000" multiple="false" required="false">
				<label>movingAverageLengthTemperature</label>
				
				<default>5</default>
				
				<description>length of a moving averaging<![CDATA[<br>]]>1=>50ms, 1000=>50s; default 5<![CDATA[<br>]]>For long term measurements the longest moving average will give the cleanest results..</description>
			</parameter>

			<parameter name="samplesPerSecond" type="integer" min="0" max="5" multiple="false" required="false">
				<label>samplesPerSecond</label>
				
				<default>3</default>
				
				<description>samples per second that are gathered<![CDATA[<br>]]>0=>20, 1=>10, 2=>5, 3=>1, 4=>0.2, 5=>0.1 samples per second; default is 1 sample per second.</description>
			</parameter>

		</config-description>
	</thing-type>

</thing:thing-descriptions>
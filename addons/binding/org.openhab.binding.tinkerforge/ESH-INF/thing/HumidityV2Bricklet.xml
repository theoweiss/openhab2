<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="tinkerforge" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

	<thing-type id="humidityV2">
		<supported-bridge-type-refs>
			<bridge-type-ref id="brickd" />
		</supported-bridge-type-refs>

		<label>BrickletHumidityV2</label>
		<description>Tinkerforge BrickletHumidityV2</description>

		<channels>
		
			<channel id="humidity" typeId="humidity"/>
		
			<channel id="temperature" typeId="temperature"/>
		
			<channel id="heater" typeId="heater"/>
		
		</channels>

		<config-description>
			<parameter name="uid" type="text">
				<label>Bricklet uid</label>
				<description>The uid identifies one certain bricklet.</description>
				<required>true</required>
			</parameter>

			<parameter name="movingAverageLengthHumidity" type="integer" multiple="false" required="false">
				<label>movingAverageLengthHumidity</label>
				<description>movingAverageLengthHumidity.</description>
			</parameter>

			<parameter name="movingAverageLengthTemperature" type="integer" multiple="false" required="false">
				<label>movingAverageLengthTemperature</label>
				<description>movingAverageLengthTemperature.</description>
			</parameter>

		</config-description>
	</thing-type>



	<channel-type id="humidity">
		
		<item-type>Number</item-type>
		
		<label>Humidity</label>
		<description>Humidity</description>
		
		<state readOnly="true" />
	</channel-type>



	<channel-type id="temperature">
		
		<item-type>Number:Temperature</item-type>
		
		<label>Temperature</label>
		<description>Current Temperature</description>
		<category>Temperature</category>
		<state readOnly="true" pattern="%.1f %unit%"/>
	</channel-type>



	<channel-type id="heater">
		
		<item-type>tfTODO</item-type>
		
		<label>Heater</label>
		<description>Heater</description>
		
		<state readOnly="false" />
	</channel-type>


</thing:thing-descriptions>
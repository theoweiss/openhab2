<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="tinkerforge" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

	<thing-type id="barometer">
		<supported-bridge-type-refs>
			<bridge-type-ref id="brickd" />
		</supported-bridge-type-refs>

		<label>BrickletBarometer</label>
		<description>Tinkerforge BrickletBarometer</description>

		<channels>
		
			<channel id="airpressure" typeId="airpressure"/>
		
			<channel id="altitude" typeId="altitude"/>
		
		</channels>

		<config-description>
			<parameter name="uid" type="text">
				<label>Bricklet uid</label>
				<description>The uid identifies one certain bricklet.</description>
				<required>true</required>
			</parameter>

		</config-description>
	</thing-type>



	<channel-type id="airpressure">
		
		<item-type>Number:Pressure</item-type>
		
		<label>AirPressure</label>
		<description>Barometric pressure</description>
		<category>Pressure</category>
		<state readOnly="true" />
	</channel-type>



	<channel-type id="altitude">
		
		<item-type>Number</item-type>
		
		<label>Altitude</label>
		<description>Altitude</description>
		
		<state readOnly="true" />
	</channel-type>


</thing:thing-descriptions>
<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="tinkerforge" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

	<thing-type id="soundpressurelevel">
		<supported-bridge-type-refs>
			<bridge-type-ref id="brickd" />
		</supported-bridge-type-refs>

		<label>BrickletSoundPressureLevel</label>
		<description>Tinkerforge BrickletSoundPressureLevel</description>

		<channels>
		
			<channel id="decibel" typeId="decibel"/>
		
		</channels>

		<config-description>
			<parameter name="uid" type="text">
				<label>Bricklet uid</label>
				<description>The uid identifies the bricklet.</description>
				<required>true</required>
			</parameter>

			<parameter name="fftSize" type="integer" min="0" max="3" multiple="false" required="false">
				<label>fftSize</label>
				
				<default>3</default>
				
				<description>FFT size <![CDATA[<br>]]>Between 1024 (3), 512 (2), 256 (1), 128 (0); default is 1024 (3).<![CDATA[<br>]]>The higher the FFT size the more precise is the result of the dB(X) calculation..</description>
			</parameter>

			<parameter name="weighting" type="integer" min="0" max="5" multiple="false" required="false">
				<label>weighting</label>
				
				<default>0</default>
				
				<description>weighting function<![CDATA[<br>]]>Between 0=>dB(A), 1=>dB(B), 2=>dB(C), 3=>dB(D), 4=>dB(Z) and 5=>ITU-R 468; default is 0=>dB(A)..</description>
			</parameter>

			<parameter name="statusLEDConfig" type="integer" min="0" max="3" multiple="false" required="false">
				<label>statusLEDConfig</label>
				
				<default>3</default>
				
				<description>Status LED<![CDATA[<br>]]>Between 0=>OFF), 1=>ON, 2=>HEARTBEAT, 3=>STATUS; default is 3=>STATUS..</description>
			</parameter>

		</config-description>
	</thing-type>

</thing:thing-descriptions>